@using College_Management_System.Models;
<h1 class="alert alert-info text-center">Courses</h1>
@model IEnumerable<Courses>;
<a asp-controller="Courses" asp-action="GetCreateView" class="btn btn-success">Create New</a>
<br />
<p class="mt-1"></p>
@if (Model.Count() != 0)
{

	<table class="table table-bordered table-striped table-hover">
		<thead>
			<tr>

				<th>@Html.DisplayNameFor(c=>c.course_name)</th>
				<th>@Html.DisplayNameFor(c=>c.course_desc)</th>
				<th>Actions</th>


			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.course_name</td>
					<td>@item.course_desc</td>
					<td>
						
						<a class="btn btn-outline-success" asp-controller="Courses" asp-action="GetEditViews" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i></a>
						<a class="btn btn-outline-danger " asp-action="GetRemoveView" asp-controller="Courses" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
					</td>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h1 style="text-align:center; background-color:indianred">There is no data.</h1>
}
<br />
